{% extends 'base.html.twig' %}

{% block title %}Certification index{% endblock %}

{% block body %}
    <h1>Certification index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>Code</th>
                <th>Name</th>
                <th>StartDate</th>
                <th>EndDate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for certification in certifications %}
            <tr>
                <td>{{ certification.id }}</td>
                <td>{{ certification.type }}</td>
                <td>{{ certification.code }}</td>
                <td>{{ certification.name }}</td>
                <td>{{ certification.startDate ? certification.startDate|date('Y-m-d') : '' }}</td>
                <td>{{ certification.endDate ? certification.endDate|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_certification_show', {'id': certification.id}) }}">show</a>
                    <a href="{{ path('app_certification_edit', {'id': certification.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_certification_new') }}">Create new</a>
{% endblock %}
