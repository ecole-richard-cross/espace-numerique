{% extends '@EasyAdmin/page/content.html.twig' %}
{% block content_title 'Export XML' %}
{% block main %}
    <h2 class="text-danger">Une erreur est survenue</h2>
    <p class="p-3 rounded bg-primary-subtle">Pour régler le souci au plus vite,
        contactez votre développeur préféré et fournissez-lui les infos ci-dessous.</p>
    <p class="mt-3 mb-3 p-3 rounded text-light bg-danger fw-bold" style="width: fit-content"">{{error}}</p>
    <div class="p-4 bg-light rounded">
        <h3 class="fs-4">Liste des certifications sélectionnées</h3>
        <ul class="list-group">
            {% for passage in passages %}
                {% set stagiaire = passage.getStagiaire() %}
                {% set certif = passage.getCertification() %}
                <li class="list-group-item">
                    {{passage}}
                </li>
            {% endfor %}
        </ul>
    </div>
    <div class="accordion mt-3" id="accordionXml">
        <div class="accordion-item">
            <h3 class="accordion-header">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                Afficher le message d'erreur entier
                </button>
            </h3>
            <div id="collapseOne" class="accordion-collapse collapse bg-danger-subtle" data-bs-parent="#accordionExample">
                <div class="accordion-body">
                    <p class="font-monospace m-0">{{ errorMessage }}</p>
                </div>
            </div>
        </div>
    </div>
    <div class="accordion mt-3" id="accordionXml">
        <div class="accordion-item">
            <h3 class="accordion-header">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="true" aria-controls="collapseOne">
                Afficher le XML
                </button>
            </h3>
            <div id="collapseTwo" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
                <div class="accordion-body">
                    <pre>{{ data }}</pre>
                </div>
            </div>
        </div>
    </div>
    <p class="mt-3">
        <a href="{{ 
        ea_url()
            .setController('App\\Controller\\Admin\\PassageCertificationCrudController')
            .setAction('index')
        }}">Revenir à la liste</a>
    </p>
{% endblock %}