{% extends 'base.html.twig' %}

{% block title %}Stagiaire{% endblock %}

{% block body %}
    <h1>Stagiaire</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ stagiaire.id }}</td>
            </tr>
            <tr>
                <th>Nom de naissance</th>
                <td>{{ stagiaire.nomNaissance }}</td>
            </tr>
            {% if stagiaire.nomUsage %}
                <tr>
                    <th>Nom d'usage</th>
                    <td>{{ stagiaire.nomUsage }}</td>
                </tr>
            {% endif %}
            <tr>
                <th>Prenom</th>
                <td>{{ stagiaire.prenom }}</td>
            </tr>
            <tr>
                <th>Sexe</th>
                <td>{{ stagiaire.sexe }}</td>
            </tr>
            <tr>
                <th>Date de naissance</th>
                <td>{{ stagiaire.dateNaissance ? stagiaire.dateNaissance|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Code postal de naissance</th>
                <td>{{ stagiaire.codePostalNaissance }}</td>
            </tr>
            <tr>
                <th>Localisation</th>
                <td>{{ stagiaire.adressePostal.adresse }}<br>
                {{ stagiaire.adressePostal.codePostal ~ ' ' ~ stagiaire.adressePostal.ville }}<br>
                {{ stagiaire.adressePostal.departement ~ ' ' ~ stagiaire.adressePostal.region }}<br></td>
            </tr>
            <tr>
                <th>Id dossier Cpf</th>
                <td>{{ stagiaire.idDossierCpf }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ stagiaire.email }}</td>
            </tr>
            <tr>
            <tr>
                <th>Visio</th>
                <td>{{ stagiaire.visio ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ stagiaire.statut }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_stagiaire_index') }}">back to list</a>

    <a href="{{ path('app_stagiaire_edit', {'id': stagiaire.id}) }}">edit</a>

    {{ include('stagiaire/_delete_form.html.twig') }}
{% endblock %}
