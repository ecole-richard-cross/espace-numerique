{% extends 'base.html.twig' %}

{% block title %}Localisation index{% endblock %}

{% block body %}
    <h1>Localisation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Adresse</th>
                <th>CodePostal</th>
                <th>Departement</th>
                <th>Region</th>
                <th>Ville</th>
                <th>Pays</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for localisation in localisations %}
            <tr>
                <td>{{ localisation.id }}</td>
                <td>{{ localisation.adresse }}</td>
                <td>{{ localisation.codePostal }}</td>
                <td>{{ localisation.departement }}</td>
                <td>{{ localisation.region }}</td>
                <td>{{ localisation.ville }}</td>
                <td>{{ localisation.pays }}</td>
                <td>
                    <a href="{{ path('app_localisation_show', {'id': localisation.id}) }}">show</a>
                    <a href="{{ path('app_localisation_edit', {'id': localisation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_localisation_new') }}">Create new</a>
{% endblock %}
