{% extends 'base.html.twig' %}

{% block title %}Changer d'avatar
{% endblock %}

{% block javascripts %}
	{{ encore_entry_script_tags('app') }}
	{{ encore_entry_script_tags('new_avatar_preview') }}
{% endblock %}

{% block body %}
	<h1>Changer d'avatar</h1>
	<div class="profile-content">
		<div id="avatarPreview">
			<svg xmlns="http://www.w3.org/2000/svg" width="120" height="120" fill="#FFF" class="bi bi-person-fill rounded-circle bg-secondary p-2" alt="Avatar Preview" viewbox="0 0 16 16">
				<path d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6"/>
			</svg>
			<img style="object-fit:cover;" width="120" height="120" class="rounded-circle d-none" alt="Avatar Preview" src="">
		</div>
		<div class="profile-card">
			{{form_start(form)}}
			<legend class="form-section-title">Avatar</legend>
			{{form_row(form.image)}}
			<div class="w-100 d-flex justify-content-between mt-2">
				{{ form_row(form.submit) }}

				<a href="{{path('app_user_profile')}}">Annuler</a>
			</div>
			{{form_end(form)}}
		</div>
	</div>
{% endblock %}
