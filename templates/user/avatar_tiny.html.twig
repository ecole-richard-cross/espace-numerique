{% set media = entity.instance.avatar %}
    {% if media is null %}
        <p class="m-0 badge badge-secondary p-2 rounded-circle fs-6"><i class="fa-regular fa-user text-secondary"></i></p>
    {% else %}
        {% set url = "uploads/"~media.url|default('') %}
        <div>
            {% if media.type|lower == 'image' %}
                <img style="max-width:32px; max-height:32px" class="mw-100" alt="Avatar de {{entity.instance}}" src={{url}}>
            {% else %}
                <p class="bg-danger text-light text-bold">Une erreur est survenue : l'avatar n'est pas une image.</p>
            {% endif %}
        </div>
    {% endif %}