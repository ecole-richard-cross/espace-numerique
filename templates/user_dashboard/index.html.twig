{% extends 'base.html.twig' %}

{% block title %}Espace apprenant | {{ parent() }} {% endblock %}

{% block body %}
<h1>Espace apprenant</h1>
<div class="container-sm">
    <div style="width: fit-content" class="mx-auto my-5 d-flex shadow rounded-3 px-4 py-3 flex-row justify-content-evenly align-items-center flex-no-wrap gap-5">
        <img class="rounded-circle" width="128" height="128" src="/uploads/{{app.user.avatar.url}}" alt="Avatar de {{app.user}}">
        <div>
            <h2>{{app.user}}</h2>
            <p>{{app.user.stagiaire ? "Promo " ~ app.user.stagiaire.promotion|last : "Utilisateur non-stagiaire"}}</p>
            <p class="smaller legend m-0"><a href="#">Modifier mes informations</a></p>
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <h2 class="m-3 text-center">Mes lectures en cours</h2>
            {% for read in currentReads %}
                {% set semLink = path('app_seminar_read',{id:read.seminar.id, chapterId: read.finishedChapters|default|sort|last + 1}) %}
                <div class="card px-4 py-3">
                    <div class="d-flex gap-4 justify-content-between align-items-center mb-2">
                        <h3 class="m-0"><a href="{{semLink}}">{{read.seminar}}</a></h3>
                        <p class="m-0 small text-center no-mobile" style="max-width: 35%">Dernière lecture le {{read.lastConsultedAt|date('d/m/Y à H:i','Europe/Paris')}}</p>
                    </div>
                    <div class="w-100 text-success fst-italic small d-flex flex-column align-items-center justify-content-center">
                        {{ read.finishedChapters|length }} / {{ read.seminar.chapters|length }} chapitres lus
                        {{ include('seminars/progressBar.html.twig', {percentDone:(read.finishedChapters|length / read.seminar.chapters|length * 100)|round }) }}
                    </div>
                </div>
            {% else %}
                <div class="card px-4 py-3 d-grid place-content-center">
                    <p class="text-center legend mb-0">Aucune lecture démarrée.</p>
                    <p class="text-center m-3"><a class="btn btn-outline-primary" href="{{path('app_seminars_index')}}">Voir la liste des séminaires</a></p>
                </div>

            {% endfor %}
        </div>
        <div class="col-6">
            <div>
                <h2 class="m-3 text-center">Mes questions</h2>
                {% for question in userQs %}
                    {% set ressourceLink = '#' %}
                    {% set lastComment = question.comments|sort((a,b) => a.createdAt - b.createdAt)|last %}
                    {{ include('discussion/preview.html.twig', {lastComment:lastComment, content: true}) }}
                {% else %}
                    <div class="card px-4 py-3 d-grid place-content-center">
                        <p class="text-center legend mb-0">Aucune question posée.</p>
                        <p class="text-center m-3"><a class="btn btn-outline-primary" href="#">Aller à l'espace discussion</a></p>
                    </div>
                {% endfor %}
            </div>
            <div>
                <h2 class="m-3 text-center">Discussions récentes</h2>
                {% for question in last3 %}
                    {% set ressourceLink = '#' %}
                    {% set lastComment = question.comments|sort((a,b) => a.createdAt - b.createdAt)|last %}
                    {{ include('discussion/preview.html.twig', {lastComment:lastComment, content:false}) }}
                {% else %}
                    <div class="card px-4 py-3 d-grid place-content-center">
                        <p class="text-center legend mb-0">Aucune question posée.</p>
                        <p class="text-center m-3"><a class="btn btn-outline-primary" href="#">Aller à l'espace discussion</a></p>
                    </div>

                {% endfor %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
